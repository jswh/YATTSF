{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "outDir": "build/compiled",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "pretty": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        ".vscode",
        "dist",
        "build"
    ]
}
